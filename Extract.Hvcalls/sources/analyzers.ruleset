<?xml version="1.0" encoding="utf-8"?>
<RuleSet Name="Extract.Hvcalls Code Quality Rules" Description="Code analysis rules for high-quality C# development" ToolsVersion="17.0">
  
  <!-- C# Compiler Rules -->
  <Rules AnalyzerId="Microsoft.CodeAnalysis.CSharp" RuleNamespace="Microsoft.CodeAnalysis.CSharp">
    <!-- Null Reference Safety Rules -->
    <Rule Id="CS8600" Action="Warning" />  <!-- Converting null literal or possible null value to non-nullable type -->
    <Rule Id="CS8602" Action="Warning" />  <!-- Dereference of a possibly null reference -->
    <Rule Id="CS8604" Action="Warning" />  <!-- Possible null reference argument -->
    <Rule Id="CS8618" Action="Warning" />  <!-- Non-nullable field must contain a non-null value -->
    <Rule Id="CS8625" Action="Warning" />  <!-- Cannot convert null literal to non-nullable reference type -->
    
    <!-- Performance and Best Practices -->
    <Rule Id="CA1822" Action="Info" />     <!-- Mark members as static when possible -->
    <Rule Id="CA1827" Action="Warning" />  <!-- Do not use Count() when Any() can be used -->
    <Rule Id="CA1829" Action="Warning" />  <!-- Use Length/Count property instead of Count() when available -->
    
    <!-- Security Rules -->
    <Rule Id="CA2100" Action="Warning" />  <!-- Review SQL queries for security vulnerabilities -->
    <Rule Id="CA5351" Action="Warning" />  <!-- Do Not Use Broken Cryptographic Algorithms -->
    <Rule Id="CA3075" Action="Warning" />  <!-- Insecure DTD processing in XML -->
    
    <!-- Design Rules -->
    <Rule Id="CA1031" Action="Info" />     <!-- Do not catch general exception types -->
    <Rule Id="CA1063" Action="Warning" />  <!-- Implement IDisposable Correctly -->
    <Rule Id="CA1062" Action="Info" />     <!-- Validate arguments of public methods -->
    
    <!-- Naming Rules -->
    <Rule Id="CA1707" Action="Info" />     <!-- Identifiers should not contain underscores -->
    <Rule Id="CA1710" Action="Info" />     <!-- Identifiers should have correct suffix -->
    
    <!-- Maintainability Rules -->
    <Rule Id="CA1502" Action="Warning" />  <!-- Avoid excessive complexity -->
    <Rule Id="CA1505" Action="Warning" />  <!-- Avoid unmaintainable code -->
    <Rule Id="CA1506" Action="Warning" />  <!-- Avoid excessive class coupling -->
  </Rules>
  
  <!-- .NET Analyzer Rules -->
  <Rules AnalyzerId="Microsoft.CodeAnalysis.NetAnalyzers" RuleNamespace="Microsoft.CodeAnalysis.NetAnalyzers">
    <!-- Performance Rules -->
    <Rule Id="CA1810" Action="Info" />     <!-- Initialize reference type static fields inline -->
    <Rule Id="CA1813" Action="Info" />     <!-- Avoid unsealed attributes -->
    <Rule Id="CA1814" Action="Info" />     <!-- Prefer jagged arrays over multidimensional -->
    
    <!-- Reliability Rules -->
    <Rule Id="CA2000" Action="Warning" />  <!-- Dispose objects before losing scope -->
    <Rule Id="CA2002" Action="Warning" />  <!-- Do not lock on objects with weak identity -->
    <Rule Id="CA2007" Action="Hidden" />   <!-- Consider calling ConfigureAwait on the awaited task -->
    
    <!-- Usage Rules -->
    <Rule Id="CA2213" Action="Warning" />  <!-- Disposable fields should be disposed -->
    <Rule Id="CA2214" Action="Warning" />  <!-- Do not call overridable methods in constructors -->
    <Rule Id="CA2215" Action="Warning" />  <!-- Dispose methods should call base class dispose -->
  </Rules>
</RuleSet>